install=rspamd.install
source=(
  git+https://github.com/rspamd/rspamd.git#tag=a74e458e157a73c9854354c6e01b4378240de601
  rspamd.tmpfiles
  rspamd.sysusers
  rspamd.logrotate
  0001-LTO-check.patch

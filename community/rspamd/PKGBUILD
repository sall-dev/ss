#  - set -DENABLE_HYPERSCAN=OFF, -DENABLE_OPTIMIZATION=OFF (LTO)
#  - patch to disable LTO when ENABLE_OPTIMIZATION=OFF

pkgname=rspamd
pkgver=2.4
pkgrel=1
epoch=
pkgdesc='Fast, free and open-source spam filtering system'
arch=(x86_64)
url=https://rspamd.com
license=(BSD)
depends=(
